<div class="container">
<div class="row">
    <div class="col-4">
    </div>
    <%= form_for @user do |f| %>
        <div class="form-group row">
          <div class="col-sm-5">
            <%= f.label :name, class:"col-form-label col-sm-5" %>
          </div>
          <div class="col-sm-7">
            <%= f.text_field :name, class: "form-control col-sm-7" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-5">
            <%= f.label :current_city, class:"col-form-label col-sm-5" %>
          </div>
          <div class="col-sm-7">
            <%= f.text_field :current_city, class: "form-control col-sm-7" %>
          </div>
        </div>
        <div class="form-group row">
          <div class="col-sm-5">
            <%= f.label :password, class:"col-form-label" %>
          </div>
          <div class="col-sm-7">
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>
      <div class="form-group row">
        <div class="col-sm-5">
        </div>
          <%= f.submit "Sign Up", class:"btn btn-lg" %>
      </div>
    <% end %>
  </div>
</div>