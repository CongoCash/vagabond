  <div class="row">
    <div class="col-4">
    </div>
    <%= form_for @user do |f| %>
        <div class="form-group row">
          <%= f.label :name, class:"col-form-label col-sm-5" %>
          <%= f.text_field :name, class: "form-control col-sm-7" %>
        </div>
        <div class="form-group row">
          <%= f.label :current_city, class:"col-form-label col-sm-5" %>
          <%= f.text_field :current_city, class: "form-control col-sm-7" %>
        </div>
        <div class="form-group row">
          <div class="col-sm-5">
          </div>
          <%= f.submit "Save", class:"btn btn-primary" %>&nbsp&nbsp
          <%= link_to "Cancel", user_path(@user), class:"btn btn-primary" %>
        </div>
    <% end %>
  </div>
