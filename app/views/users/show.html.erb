<div class="row">
  <div class="show-left-side col-sm-3">
    <h1><%=@user.name%></h1>
    <%= image_tag 'https://pbs.twimg.com/profile_images/675408020730470400/Mibaxn2x.jpg', class: "show-image"%>
    <p><strong>Join Date: </strong><%=@user.created_at.strftime("%F")%></p>
    <p><strong>Current City: </strong><%=@user.current_city%></p>
    <% if current_user && current_user.id.to_s == params[:id].to_s%>
      <%= link_to "Edit User", edit_user_path(@user), class:"btn btn-primary back-color"%>
    <% end %>
  </div>

  <div class="show-right-side col-sm-9">
    <ul>
      <% @user.posts.each do |post| %>
      <div class="row">
        <div class="col-sm-10">
					<%= link_to post, class:"card-link" do %>
          <div class="card card-inverse card-primary mb-3">
           <div class="card-block">
             <h3><%=post.title%></h3>
             <p><strong>Author: <%=post.user.name%>&nbsp;&nbsp;&nbsp;&nbsp;</strong>Posted At: <%=post.created_at.strftime("%F %H:%M")%>&nbsp;&nbsp;&nbsp;&nbsp;City: <%= post.city.name%></p>
               <p><%= post.content.truncate(300)%></p>
           </div>
          </div>
					<% end %>

        </div>
        <% if current_user && current_user.id.to_s == params[:id].to_s%>
        <div class="col-sm-2">
          <%= link_to "Edit Post", edit_post_path(post), class:"btn btn-primary back-color" %><br>
          <%= link_to "Delete Post", post, method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-primary back-color" %>
        </div>
        <% end %>
      </div>
    <% end %>
    </ul>
  </div>

</div>
